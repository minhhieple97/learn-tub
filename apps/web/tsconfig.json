{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "target": "ES2020",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "next.config.js", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
